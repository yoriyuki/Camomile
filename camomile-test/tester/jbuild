(jbuild_version 1)

(executables
 ((names
   (testOOChannel
    test_base
    test_caseMap
    test_charEncoding
    test_normalform
    test_uCol
    test_uTF8
    test_stringprep
    uCS4_test
    uReStr_test
    uTF16_test))
  (libraries (str camomile blender tester_lib))))

(alias
 ((name runtest)
  (deps (testOOChannel.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_base.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_caseMap.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_charEncoding.exe (glob_files ../data/enc/*)))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_normalform.exe
         ../unidata/NormalizationTest.txt
         ../unidata/CollationTest_SHIFTED.txt))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_uCol.exe
         (glob_files ../unidata/*)
         (glob_files ../data/*)))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_uTF8.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_stringprep.exe ../data/stringprep))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (uCS4_test.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (uReStr_test.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (uTF16_test.exe))
  (action (run ${<}))))
