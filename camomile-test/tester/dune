(env
 (dev
  (flags
   (:standard -w -3-32))))

(executables
 (names
  testOOChannel
  test_base
  test_caseMap
  test_charEncoding
  test_normalform
  test_uCol
  test_uTF8
  test_stringprep
  uCS4_test
  uReStr_test
  uTF16_test)
 (libraries unix str camomile camomile.lib blender tester_lib))

(rule
 (alias runtest)
 (deps testOOChannel.exe)
 (action
  (run %{deps})))

(rule
 (alias runtest)
 (action
  (run ./test_base.exe)))

